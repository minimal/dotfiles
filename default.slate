# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Resize Bindings
# bind right:alt       resize +10% +0
# bind left:alt        resize -10% +0
# bind up:alt          resize +0   -10%
# bind down:alt        resize +0   +10%
# bind right:ctrl;alt  resize -10% +0 bottom-right
# bind left:ctrl;alt   resize +10% +0 bottom-right
# bind up:ctrl;alt     resize +0   +10% bottom-right
# bind down:ctrl;alt   resize +0   -10% bottom-right

# Push Bindings
# bind right:ctrl;cmd  push right bar-resize:screenSizeX/3
# bind left:ctrl;cmd   push left  bar-resize:screenSizeX/3
# bind up:ctrl;cmd     push up    bar-resize:screenSizeY/2
# bind down:ctrl;cmd   push down  bar-resize:screenSizeY/2

# # Nudge Bindings
# bind right:shift;alt nudge +10% +0
# bind left:shift;alt  nudge -10% +0
# bind up:shift;alt    nudge +0   -10%
# bind down:shift;alt  nudge +0   +10%

# # Throw Bindings
# bind 1:ctrl;alt         throw 0 resize
# bind 2:ctrl;alt         throw 1 resize
# bind 3:ctrl;alt         throw 2 resize
# bind right:ctrl;alt;cmd throw right resize
# bind left:ctrl;alt;cmd  throw left  resize
# bind up:ctrl;alt;cmd    throw up    resize
# bind down:ctrl;alt;cmd  throw down  resize

# # Focus Bindings
bind right:cmd;alt    focus right
bind left:cmd;alt     focus left
bind up:cmd;alt       focus up
bind down:cmd;alt     focus down
bind pageUp:cmd;alt   focus behind
bind pageDown:cmd;alt focus behind

# # Window Hints
bind esc:cmd hint

# mymods layouts Put emacs full screen on right screen, chrome left
# half of left screen, iterm bottom right of left screen
alias  iterm-trim  60
alias   chrome-right-offset  screenOriginX+screenSizeX/2-${iterm-trim}

layout  dev 'Emacs' throw 1 resize
layout  dev 'Google Chrome' push left  bar-resize:${iterm-trim}+screenSizeX/2  throw 0
layout  dev 'iTerm'  move screenOriginX+screenSizeX/2+${iterm-trim};screenOriginY+screenSizeY/2 screenSizeX/2-${iterm-trim};screenSizeY/2 0

layout  dev2 'Emacs' throw 1 resize
layout  dev2 'Google Chrome' move ${chrome-right-offset};screenOriginY  screenSizeX/2+${iterm-trim};screenSizeY 0
layout  dev2 'iTerm'  move screenOriginX;screenOriginY+screenSizeY/2  screenSizeX/2-${iterm-trim};screenSizeY/2 0

#       do the opposite
alias   chrome-right-offset  screenOriginX+screenSizeX/2-${iterm-trim}
layout  devswap 'Emacs' throw 0 resize
layout  devswap 'Google Chrome'  move ${chrome-right-offset};screenOriginY  screenSizeX/2+${iterm-trim};screenSizeY 1
layout  devswap 'iTerm' move screenOriginX;screenOriginY+screenSizeY/2  screenSizeX/2-${iterm-trim};screenSizeY/2 1

#       do the opposite with iterm and chrome swapped
layout  devswap2 'Emacs' throw 0 resize
layout  devswap2 'Google Chrome'  move screenOriginX;screenOriginY  screenSizeX/2+${iterm-trim};screenSizeY 1
layout  devswap2 'iTerm' move screenOriginX+screenSizeX/2+${iterm-trim};screenOriginY+screenSizeY/2  screenSizeX/2-${iterm-trim};screenSizeY/2 1

bind    1:cmd;alt  layout dev
bind    2:cmd;alt  layout dev2
bind    3:cmd;alt  layout devswap
bind    4:cmd;alt  layout devswap2

bind    tab:cmd switch
# bind    l:cmd;alt 1source ~/.slate
