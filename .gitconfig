[color]                        
    diff = auto            
    status = auto          
    branch = auto
    ui = auto
[user]                         
    name =
    email = 
[cola]
    fontdiff = Droid Sans Mono Dotted,10,-1,5,50,0,0,0,0,0
    fontui = Nimbus Sans L,12,-1,5,50,0,0,0,0,0
    savewindowsettings = true
    tabwidth = 4
[core]
    editor = emacsclient  -nw
    excludesfile = /home/chris/.gitignore
[gui]
    editor = emacsclient --no-wait

[alias] 
    lol = log --oneline --graph --decorate
    lola = log --graph --decorate --oneline --all
    ci = commit
    st = status -sb
    co = checkout
    oneline = log --pretty=oneline
    br = branch
    la = log --pretty=\"format:%ad %h (%an): %s\" --date=short
    pg = push origin HEAD:refs/for/master
    nm = log --no-merges
    dw = diff --word-diff
    d = diff --color-words --abbrev
    dc = diff --cached
    m = merge
    mnff = merge --no-ff
    tags = !git for-each-ref --sort=-taggerdate --format '%(refname:short) %(taggerdate:relative)' refs/tags
    pick = !sh -c 'git log -S$1 -p' -  # show log diffs that add/remove arg string
    root = !pwd
[github]
    user = minimal
    token = 
[merge]
	tool = diffmerge
[rerere]
    enabled = 1
[branch]
    autosetuprebase = always
[push]
    default = upstream
[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[mergetool "diffmerge"]
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true
[help]
	autocorrect = 10
